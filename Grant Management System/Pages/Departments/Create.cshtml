@model Grant_Management_System.Pages.Departments.CreateModel

@{
    ViewData["Title"] = "Add New Department";
}

<h1>Create a new department.</h1>
<p style="color:red">*All fields are required!</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Department.DepartmentName" class="control-label"></label>
                <input asp-for="Department.DepartmentName" class="form-control" />
                <span asp-validation-for="Department.DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.DepartmentChair" class="control-label"></label>
                <input asp-for="Department.DepartmentChair" class="form-control" />
                <span asp-validation-for="Department.DepartmentChair" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.DepartmentLocation" class="control-label"></label>
                <input asp-for="Department.DepartmentLocation" class="form-control" />
                <span asp-validation-for="Department.DepartmentLocation" class="text-danger"></span>
            </div>
            <!-- Dropdown for selecting the College 
            <div class="form-group">
                <label asp-for="Department.CollegeId" class="control-label">Select College</label>
                <select asp-for="Department.CollegeId" class="form-control" asp-items="ViewBag.CollegeList"></select>
                <span asp-validation-for="Department.CollegeId" class="text-danger"></span>
            </div> -->
            <div class="form-group" style="padding:15px;">
                <input type="submit" value="Add as new Department" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
